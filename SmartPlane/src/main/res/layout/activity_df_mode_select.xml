<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/select_mode_title_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/select_mode_title"
        android:textSize="30sp" />

    <Button
        android:id="@+id/select_mode_server_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_mode_title_tw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/select_mode_server"
        android:onClick="start_server"/>

    <Button
        android:id="@+id/select_mode_client_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_mode_server_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/select_mode_client"
        android:onClick="start_discovery"/>

</RelativeLayout>